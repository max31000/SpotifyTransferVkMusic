<Page x:Class="SpotifyTransferVkMusic.TransferPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SpotifyTransferVkMusic"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TransferPage">

    <StackPanel>
        <Label FontSize="24" VerticalAlignment="Stretch" Width="500" Margin="0, 10, 0, 0">Что мы нашли:</Label>
        <ListBox x:Name="songsListBox" Margin="150, 0, 150, 0" Width="500" Height="250" ></ListBox>
        <Label Margin="150, 5, 150, 0" Width="500" FontSize="14">Название плейлиста(существующий или новый), куда перенести музыку:</Label>
        <TextBox x:Name="playlistNameTextbox" Width="500" Margin="150, 0, 150, 0" FontSize="18"></TextBox>
        <Label Margin="150, 0, 150, 0" FontSize="12" Width="500" Foreground="DarkRed" Height="26"></Label>
        <Button x:Name="AddButton" Margin="0, 5, 0, 0" Width="140" Height="30" IsEnabled="False">Добавить</Button>
    </StackPanel>
</Page>
